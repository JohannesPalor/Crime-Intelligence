<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />


    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />




    <style>


        #mapBody {
            height: 90%;
            width: 100%;
            margin-top: 50px;
        }
      
        .transparent {
            background: rgba(29, 45, 71, .9);
        }



        .white {
            color: white;
        }

        img {
            object-fit: fill;
        }

        .flex {
            display: flex;
        }
    </style>

</head>
<body>
    <div class="navbar transparent navbar-inverse navbar-fixed-top">
        <div class="container white">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle " data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Crime Intelligence System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Analytics", "Analytics", "Reports")</li>
                    <!-- <li>@Html.ActionLink("Report Generation", "Contact", "Home")</li>-->
                   
                </ul>
                @if (Session["userid"] != null) {
                <ul class="nav navbar-nav navbar-right">
                    <li><a>Welcome @Session["username"]</a></li >

                    <li><a href="@Url.Action("ClearSession", "Account")" onclick="">Sign-out</a></li>
                </ul>
                }
                
            </div>
        </div>
    </div>
    <div class="body-content container" id="mapBody">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CIS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>

    </script>



</body>
</html>
